extends layout 

block content
    link(rel="stylesheet", href="/stylesheets/details.css")

    div.wrapper
        div.details-wrapper
            header
                img.left(src="/images/arrow-left.svg")
                h1.title=title 
                button.complete-btn(type="button")="완료"
            section.join-detail 
                form(action="/auth/register_process" method="POST") 
                    div.input-wrapper
                        - const inputFields = [{label: 'email', title: '이메일', type: 'text', placeholder: '예시) baemin@woowahan.com'}, {label: 'nickname', title: '닉네임', type: 'text', placeholder: '예시) baebae' },{label: 'password', title: '비밀번호', type: 'password', placeholder: '10자 이상 영어 대문자, 소문자, 특수문자 중 2종류 조합' },{label: 'birth', title: '생년월일', type: 'text', placeholder: '예시) 2000.01.01' }]
                        each inputField in inputFields
                            label.input-field(for=inputField.label class=`input-field${inputField.label !== 'email' ? ' hidden' : ''}`) 
                                div.title=inputField.title 
                                div.field-wrapper(class=`${inputField.label}-wrapper`)
                                    div(class=`field`)
                                        input(class=`user-${inputField.label}` type=inputField.type name=inputField.label id=inputField.label placeholder=inputField.placeholder)
                                        button(class="cancel" type="button" tabIndex=-1)
                                            img(src="/images/cancel-circle.png")
                                        span.check-mark
                                    if inputField.label === 'email' 
                                        div.validate-btn="중복확인"
                                p.invalid-message 
                                    
    script(type="module" src="/javascripts/detailsPage.js")